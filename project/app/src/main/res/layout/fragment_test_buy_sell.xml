<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/black"
    android:clickable="true"
    android:id="@+id/cl_pageviewer_clmain"
    tools:context=".main.Fragments.TestBuy.TestBuySellFragment">

    <View
        android:id="@+id/viewbottom"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="@drawable/shape_bottom_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/botton_pageviewer_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_shopping_cart_24"
        android:padding="15dp"
        app:layout_constraintEnd_toStartOf="@id/botton_pageviewer_sell"
        app:layout_constraintStart_toStartOf="@id/viewbottom"
        app:layout_constraintTop_toTopOf="@id/viewbottom" />

    <ImageView
        android:id="@+id/botton_pageviewer_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_remove_shopping_cart_24"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@id/viewbottom"
        app:layout_constraintStart_toEndOf="@id/botton_pageviewer_buy"
        app:layout_constraintTop_toTopOf="@id/viewbottom" />



    <TextView
        android:id="@+id/textView_pageviewer_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:text="@string/buy"
        android:textColor="@color/pink_500"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/botton_pageviewer_buy"
        app:layout_constraintStart_toStartOf="@id/botton_pageviewer_buy"
        app:layout_constraintTop_toBottomOf="@id/botton_pageviewer_buy" />
    <TextView
        android:id="@+id/textView_pageviewer_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:text="@string/sold"
        android:textColor="@color/grey_700"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/botton_pageviewer_sell"
        app:layout_constraintStart_toStartOf="@id/botton_pageviewer_sell"
        app:layout_constraintTop_toBottomOf="@id/botton_pageviewer_sell" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pageviewer_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewbottom"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>