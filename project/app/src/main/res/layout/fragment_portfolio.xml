<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".main.Fragments.PortfolioFragment">
    <Button
        android:id="@+id/button_portfolio_back"
        android:layout_width="32dp"
        android:layout_marginTop="8dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="@id/textview_portfolio_title"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/textview_portfolio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:text="@string/protfolio"
        android:fontFamily="@font/b_titr"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/view_portfolio_viewBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_view_black_background_primry"
        app:layout_constraintTop_toBottomOf="@id/textview_portfolio_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_portfolio_recyclerview"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="@id/view_portfolio_viewBackground"
    app:layout_constraintEnd_toEndOf="@id/view_portfolio_viewBackground"
    app:layout_constraintTop_toTopOf="@id/view_portfolio_viewBackground"
    app:layout_constraintBottom_toBottomOf="@id/view_portfolio_viewBackground"
    android:layout_marginTop="16dp"
android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_portfolio_clNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_portfolio_viewBackground"
        app:layout_constraintEnd_toEndOf="@id/view_portfolio_viewBackground"
        app:layout_constraintStart_toStartOf="@id/view_portfolio_viewBackground"
        app:layout_constraintTop_toTopOf="@id/view_portfolio_viewBackground"
      >

        <TextView
            android:id="@+id/textView_portfolio_noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.1"
            android:text="پرتوفی خالی"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.1"
            android:background="@drawable/ic_baseline_inbox_24"
            app:layout_constraintEnd_toEndOf="@id/textView_portfolio_noData"
            app:layout_constraintStart_toStartOf="@id/textView_portfolio_noData"
            app:layout_constraintTop_toBottomOf="@id/textView_portfolio_noData" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/button_portfolio_retry"
        android:visibility="invisible"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/retry_icon_white"
        app:layout_constraintEnd_toEndOf="@id/view_portfolio_viewBackground"
        app:layout_constraintTop_toTopOf="@id/view_portfolio_viewBackground"
        app:layout_constraintStart_toStartOf="@id/view_portfolio_viewBackground"
        app:layout_constraintBottom_toBottomOf="@id/view_portfolio_viewBackground"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressbar_portfolio_progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_rawRes="@raw/loading"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintEnd_toEndOf="@id/view_portfolio_viewBackground"
        app:layout_constraintTop_toTopOf="@id/view_portfolio_viewBackground"
        app:layout_constraintStart_toStartOf="@id/view_portfolio_viewBackground"
        app:layout_constraintBottom_toBottomOf="@id/view_portfolio_viewBackground"
/>
    </androidx.constraintlayout.widget.ConstraintLayout>